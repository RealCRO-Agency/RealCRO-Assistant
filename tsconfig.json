{
  "compilerOptions": {
    "target": "ES2020",                     // JavaScript output version
    "module": "ES2020",                     // Module system used
    "moduleResolution": "Node",             // Node-style imports
    "strict": true,                         // Enables strict type-checking
    "esModuleInterop": true,                // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Prevents case mismatch issues
    "skipLibCheck": true                    // Skips checking type definitions (speeds up)
  },
  "include": ["api"]                        // Only compile files in /api
}
